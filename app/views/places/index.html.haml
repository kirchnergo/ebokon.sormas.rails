%h1 All Places

%table.table
  %thead
    %tr
      %th Name
      %th Type of Place
      %th Lon
      %th Lat
      %th Description
      %th #Addresses
      %th
      %th
      %th

  %tbody
    - @places.each do |place|
      %tr
        %td= place.name
        %td= place.type_of_place
        %td= place.lon
        %td= place.lat
        %td= place.description
        %td= place.addresses.count
        %td= link_to raw(fa_icon("eye", class: "th-large text-success")), place
        %td= link_to raw(fa_icon("pencil", class: "th-large text-warning")), edit_place_path(place)
        %td= link_to raw(fa_icon("trash", class: "th-large text-danger")), place, :method => :delete, :data => { :confirm => 'Are you sure?' }


= paginate @places, :theme => 'twitter-bootstrap-3'
%br
= link_to 'New Place', new_place_path, class: "btn btn-primary"
